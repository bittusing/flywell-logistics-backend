# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/onedelivery

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Third-party API Keys (for delivery partners)
# =============================================

# Delhivery API (Recommended - Working)
# Documentation: https://one.delhivery.com/developer-portal/documents
# Get API Token from: https://one.delhivery.com/settings/api-setup
# 1. Login to Delhivery portal
# 2. Go to Settings â†’ API Setup
# 3. Click "Request Live API Token"
# 4. Copy the token (visible for 5 minutes only)
DELHIVERY_API_TOKEN=your_delhivery_api_token_here
DELHIVERY_CLIENT_NAME=your_client_name_here  # Required for some endpoints (waybill fetch, etc.)
DELHIVERY_ENVIRONMENT=production  # Options: 'test' or 'production'
# Test: https://staging-express.delhivery.com
# Production: https://track.delhivery.com

# Blue Dart API credentials (via DHL Developer Portal)
# Get from: https://developer.dhl.com/user/{user_id}/apps/{app_name}
BLUE_DART_API_KEY=your_api_key_from_dhl_portal
BLUE_DART_API_SECRET=your_api_secret_from_dhl_portal
BLUE_DART_API_BASE_URL=https://api.dhl.com/ecommerce/bluedart
BLUE_DART_ACCOUNT_NUMBER=your_dhl_account_number  # Optional

# FedEx API
FEDEX_API_KEY=your_fedex_api_key
FEDEX_API_SECRET=your_fedex_api_secret
FEDEX_API_BASE_URL=https://apis.fedex.com
BLUEDART_API_KEY=your_bluedart_api_key
BLUEDART_API_SECRET=your_bluedart_api_secret

# Overseas Logistic API (International Shipping)
# Documentation: https://document.overseaslogistic.com/
# Supports: UPS_SAVER, UPS_EXPRESS, DHL_EXPRESS, FEDEX_PRIORITY, etc.
OVERSEAS_LOGISTIC_BASE_URL=https://api.overseaslogistic.com
OVERSEAS_LOGISTIC_ACCOUNT_CODE=your_account_code
OVERSEAS_LOGISTIC_USERNAME=your_username
OVERSEAS_LOGISTIC_PASSWORD=your_password

# KYC Verification API (Sandbox.co.in)
# Documentation: https://sandbox.co.in/kyc
# Get API key from: https://sandbox.co.in/dashboard
SANDBOX_API_KEY=your_sandbox_api_key_here

